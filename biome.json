{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "root": true,
  "vcs": {
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**",
      "!dist",
      "!**/dist",
      "!.next",
      "!**/.next",
      "!!**/build",
      "!!**/coverage"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
